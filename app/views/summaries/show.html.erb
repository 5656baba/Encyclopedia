<div class="container mt-5">
  <div class="row">
    <div class="col-md-3">
      <table class="table table-bordered genre-search mt-5">
        <thead class="table-dark">
          <tr>
            <td>投稿一覧</td>
          </tr>
        </thead>
        <tbody>
          <% @summaries.each do |summary| %>
          <tr>
            <th><%= link_to summary.title, summary_path(summary.id) %></th>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-md-9">
      <div class="card mb-1">
        <div class="card-body">
          <p>ジャンル：<%= @summary.genre.name %></p>
          <p class="card-text">
            <big><%= @summary.title %></br></big>
          </p>
          <p class="card-text">
            <small><%= simple_format @summary.sentence %></small>
          </p>
          <p>参考文献のURL</p>
          <p class="card-text">
            <%= auto_link(simple_format(@summary.url)) %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>